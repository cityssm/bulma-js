{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": ["src/*", "test/*"]
}
