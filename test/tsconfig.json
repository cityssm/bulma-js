{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "isolatedModules": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": ["./*", "./**/*"]
}
